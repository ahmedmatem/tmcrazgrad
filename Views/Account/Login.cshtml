@model TMC.Web.Models.LoginModel

@{
    ViewBag.Title = "Вход";
}

<section id="loginForm" class="container-fluid">

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl, role = "form" })) {
    @Html.AntiForgeryToken()

    <fieldset>
        <legend class="text-center">Вход към администрация</legend>
    </fieldset>
    @*<p>
        @Html.ActionLink("Register", "Register") if you don't have an account.
    </p>*@
    
    <div class="form-group col-md-6 col-md-offset-3">
        @Html.ValidationSummary(true)
    </div>

    <div class="form-group col-md-4 col-md-offset-4">
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "потребителско име" })
        @Html.ValidationMessageFor(m => m.UserName)
    </div>
    
    <div class="form-group col-md-4 col-md-offset-4">
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "парола" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    
    <div class="checkbox col-md-4 col-md-offset-4">
        <label>
            <input type="checkbox"> Запомни ме
            <button type="submit" class="btn btn-default pull-right"><i class="fa fa-sign-in"></i> Вход</button>
        </label>
    </div>

}
</section>

